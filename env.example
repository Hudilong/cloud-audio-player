MAX_COVER_UPLOAD_BYTES="8388608"           # 8MB
DAILY_TRACK_UPLOAD_LIMIT="25"
TOTAL_TRACK_UPLOAD_LIMIT="250"
MAX_TRACK_DURATION_SECONDS="900"           # 15 minutes

# Seeding/dev data
SEED_USER_EMAIL="dev@example.com"
SEED_USER_PASSWORD="password123"
SEED_ADMIN_EMAIL="admin@example.com"
SEED_ADMIN_PASSWORD="changeme-admin"
SEED_AUDIO_S3_KEY="uploads/dev-audio.mp3"
SEED_ALLOW_FAKE_AUDIO="true"
SEED_FAKE_AUDIO_S3_KEY="missing/dev-audio.mp3"
SEED_TRACK_COUNT="50"

# Uncomment to skip automatic Prisma migrations (handle them manually in your pipeline)
# SKIP_PRISMA_MIGRATE="true"

